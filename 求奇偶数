n=eval(input())
def fact(n):
    if n<=0:
        return 0
    elif n%2==0:
        return fact(n-2)+n
    else:
        return fact(n-1)
def facts(n):
    if n<=0:
        return 0
    elif n%2!=0:
        return facts(n-2)+n
    else:
        return facts(n-1)
print("1+2+3+",n,"的偶数和是",fact(n),"1+2+3+",n,"的奇数和是",facts(n))
